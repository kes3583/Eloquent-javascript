function printStar(){
  var output = ""; //should be outside for loop
  for(i = 0; i < 7; i++){
    for(j = 0; j < i; j++){
      output += "*";
    }
    output += "<br>"; //enter line should be outside nasted for loop
  }
  //document.getElementById("demo").innerHTML = output;
  document.write(output);

  //for (var line = "#"; line.length < 8; line += "#")  
  //console.log(line); // or 
  //document.write(line +'<br>');
  // the eloquent javascript soltution. 
  // if I wanted to print on document? using document.write insted console.log doesn't look pryramid. 
}
